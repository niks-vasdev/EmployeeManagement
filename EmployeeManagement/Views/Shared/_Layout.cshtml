<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Employee Management</title>

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.datatables.net/2.0.8/css/dataTables.dataTables.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-validator/0.5.3/css/bootstrapValidator.min.css" />
    <link rel="stylesheet" href="~/EmployeeManagement.styles.css" asp-append-version="true" />
</head>

<body>
    <header class="navbar sticky-top flex-md-nowrap p-0 shadow">
        <a class="navbar-brand col-md-4 col-lg-3 px-2 fs-6 text-white" id="title">Employee Management</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <img src="~/images/menu.svg" alt="Menu" />
        </button>
    </header>

    <div class="container-fluid">
        <main role="main">
            <div id="wrapper">
                <div id="sidebar-wrapper" class="d-none d-md-block">
                    <ul class="sidebar-nav nav-pills nav-stacked mt-3" id="menu">
                        <li>
                            <a href="/Employee/Index"><i class="bi bi-person"></i><span class="d-none d-md-inline">Employee</span></a>
                        </li>
                        <li>
                            <a href="/Department/Index"><i class="bi bi-building"></i><span class="d-none d-md-inline">Department</span></a>
                        </li>
                        <li>
                            <a href="/Task/Index"><i class="bi bi-window-desktop"></i><span class="d-none d-md-inline">Task</span></a>
                        </li>
                    </ul>
                </div>
                <div class="d-block d-md-none">
                    <nav class="navbar navbar-wrapper">
                        <div class="collapse navbar-collapse" id="navbarNav">
                            <ul class="navbar-nav">
                                <li class="nav-item">
                                    <a class="nav-link" style="text-align:start; margin-left:10px;" href="/Employee/Index"><i class="bi bi-person"></i> <span>Employee</span></a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" style="text-align:start; margin-left:10px;" href="/Department/Index"><i class="bi bi-building"></i> <span>Department</span></a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" style="text-align:start; margin-left:10px;" href="/Task/Index"><i class="bi bi-window-desktop"></i> <span>Task</span></a>
                                </li>
                            </ul>
                        </div>
                    </nav>
                </div>
                @RenderBody()
            </div>
        </main>
    @Html.Partial("~/Views/Shared/_Toaster.cshtml")
    </div>
    



    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <script src="https://cdn.datatables.net/2.0.8/js/dataTables.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.20.0/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-validator/0.5.3/js/bootstrapValidator.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
